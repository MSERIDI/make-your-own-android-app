<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="1dp"
    android:paddingRight="1dp"
    android:paddingTop="1dp"
    android:paddingBottom="1dp"
    tools:context=".MainActivity">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"

        android:minHeight="?android:attr/listPreferredItemHeight">
        <ImageButton
            android:src="@drawable/ic_action_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/go_back"
            android:clickable="true"
            android:adjustViewBounds="false"
            android:contentDescription="The previous page" />
        <ImageButton
            android:src="@drawable/ic_action_forwaard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/go_forward"

            android:clickable="true"
            android:adjustViewBounds="false"
            android:contentDescription="The Next" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/urled"
            android:layout_weight="1"
            android:textSize="@dimen/text_size"
            android:singleLine="true"
            />
        <ImageButton
            android:src="@drawable/ic_action_goo"
            android:layout_width="59dp"
            android:layout_height="55dp"

            android:clickable="true"
            android:id="@+id/goo"
            android:contentDescription="Research" />
        <ImageButton
            android:src="@drawable/ic_action_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/refresh"

            android:clickable="true"
            android:adjustViewBounds="false"
            android:contentDescription="Refresh" />
    </LinearLayout>


    <WebView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/wVbrowser"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.02" />


</LinearLayout>
